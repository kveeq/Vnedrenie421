<Page
    x:Class="PenShop.View.PensWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PenShop.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PensWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="ALiceBLue">
        <ListView x:Name="PensLstVIew">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Articule}" />
                    <GridViewColumn DisplayMemberBinding="{Binding Company.Name}" />
                    <GridViewColumn DisplayMemberBinding="{Binding TypePen.Name}" />
                    <GridViewColumn DisplayMemberBinding="{Binding Color}" />
                    <GridViewColumn DisplayMemberBinding="{Binding Price}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
